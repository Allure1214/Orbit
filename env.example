# Orbit Dashboard Environment Variables
# Copy this file to .env.local and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/orbit_dashboard"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-random-secret-key-here"

# Google OAuth (Required for authentication)
# Get these from: https://console.developers.google.com/
GOOGLE_CLIENT_ID="your-google-client-id-here"
GOOGLE_CLIENT_SECRET="your-google-client-secret-here"

# Google Calendar Integration (Optional)
# Same credentials as above, but ensure Calendar API is enabled
# Add this redirect URI to your Google OAuth app: http://localhost:3000/api/auth/google-calendar/callback
GOOGLE_REDIRECT_URI="http://localhost:3000/api/auth/google-calendar/callback"

# Weather API (Optional - using free Open-Meteo by default)
# Get from: https://www.weatherapi.com/ (free tier available)
WEATHER_API_KEY="your-weatherapi-key-optional"

# News API (Optional - for news widget)
# Get from: https://newsapi.org/ (free tier available)
NEWS_API_KEY="your-news-api-key-optional"

# OpenAI API (Optional - for AI features)
# Get from: https://platform.openai.com/
OPENAI_API_KEY="your-openai-api-key-optional"

# F1 API (No key required - completely free)
F1_API_BASE_URL="https://ergast.com/api/f1"

# Setup Instructions:
# 1. Copy this file: cp env.example .env.local
# 2. Fill in your actual values
# 3. Run: npm run dev
